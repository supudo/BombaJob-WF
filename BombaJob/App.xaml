<Application
    x:Class="BombaJob.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:convs="clr-namespace:BombaJob.Utilities.Converters"
    StartupUri="MainWindow.xaml">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>
                    <convs:OfferIconConverter x:Key="OfferIconConverter" />
                    <convs:OfferDateShortConverter x:Key="OfferDateShortConverter" />
                    <convs:OfferDateLongConverter x:Key="OfferDateLongConverter" />
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>

</Application>
